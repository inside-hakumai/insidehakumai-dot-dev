{
  "name": "insidehakumai-dot-net",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "format": "npx prettier-eslint --write \"{$PWD/src/*.@(ts|tsx|js|jsx),$PWD/*.@(ts|tsx|js|jsx)}\"",
    "copy:html": "cpx ./src/index.html ./dist",
    "start:dev": "npx webpack-dev-server",
    "build": "npx webpack && yarn run copy:html"
  },
  "repository": "git@github.com:inside-hakumai/insidehakumai-dot-net.git",
  "author": "inside-hakumai",
  "license": "MIT",
  "devDependencies": {
    "@cybozu/eslint-config": "^10.0.4",
    "cpx": "^1.5.0",
    "css-loader": "^3.4.2",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "jquery": "^3.4.1",
    "normalize.css": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.@(ts|tsx|js|jsx)": "prettier --write"
  }
}
